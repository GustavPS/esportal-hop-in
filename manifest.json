{
    "name": "Esportal Hop-in",
    "description": "Show an alert when a game is available for hop-in",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "tabs"
    ],
    "content_scripts": [{
        "css": ["styles.css"],
        "js": ["content.js"],
        "matches": ["https://esportal.com/*"]
    }]
  }